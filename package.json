{
  "name": "@hmcts/div-idam-test-harness",
  "version": "1.9.0",
  "description": "Test harness for the IdAM Express Middleware",
  "license": "MIT",
  "main": "src/index.js",
  "engines": {
    "node": ">=10.15.2"
  },
  "scripts": {
    "lint": "eslint .",
    "test-coverage": "LOG_LEVEL=OFF istanbul cover _mocha src/**/*.test.js",
    "posttest-coverage": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "test": "yarn lint && yarn test-coverage",
    "test:pact": "NODE_PATH=. LOG_LEVEL=error mocha 'src/pact/tests/*.spec.js' --timeout 15000 --reporter spec",
    "publish-pact": "NODE_PATH=. LOG_LEVEL=error mocha 'src/pact/PublishPact.js' --timeout 15000 --reporter spec",
    "sonar-scanner": "sonar-scanner"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/div-idam-express-middleware": "^6.6.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "socks5-https-client": "^1.2.1"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "@pact-foundation/pact": "^7.2.0",
    "@pact-foundation/pact-node": "^6.20.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.17.0",
    "eslint-plugin-mocha": "^5.3.0",
    "get-port": "^5.0.0",
    "git-rev-sync": "^1.12.0",
    "http-status-codes": "^1.3.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "pre-commit": "^1.2.2",
    "sinon": "^7.3.2",
    "sonar-scanner": "^3.1.0",
    "supertest": "^4.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
