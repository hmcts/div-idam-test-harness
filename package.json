{
  "name": "@hmcts/div-idam-test-harness",
  "version": "1.3.0",
  "description": "Test harness for the IdAM Express Middleware",
  "license": "MIT",
  "main": "src/index.js",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test-coverage": "LOG_LEVEL=OFF istanbul cover _mocha src/**/*.test.js",
    "posttest-coverage": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "test-nsp": "nsp check",
    "test": "yarn lint && yarn test-coverage && yarn test-nsp",
    "sonar-scanner": "sonar-scanner"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/div-idam-express-middleware": "^6.0.1",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "socks5-https-client": "^1.0.3"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "chai": "^4.0.2",
    "eslint": "^4.17.0",
    "eslint-plugin-mocha": "^4.11.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "nsp": "^3.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^4.3.0",
    "sonar-scanner": "^3.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
